<h1> Welcom to the 99cats </h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Birth Date</th>
      <th>Color</th>
      <th>Sex</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @cat.name %></td>
      <td><%= @cat.birth_date%></td>
      <td><%= @cat.color %></td>
      <td><%= @cat.sex %></td>
      <td><%= @cat.description %></td>
    </tr>
  </tbody>
</table>

<h2> Cat <%= @cat.name %> rental requests </h2>

<table>
  <thead>
    <tr>
      <th>Start Date</th>
      <th>End Date</th>
      <th>Status</th>
      <th>Option</th>
    </tr>
  </thead>
  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.start_date %></td>
        <td><%= request.end_date %></td>
        <td><%= request.status %></td>
        <td>
          <% if request.pending? %>
            <div style="display: flex">
              <a class="approve" href="<%= "/cat_rental_requests/#{request.id}/approve"%>">
                Approve
              </a>
              <a class="deny" href="<%= "/cat_rental_requests/#{request.id}/deny"%>">
                Deny
              </a>
            </div>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
